<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellowBackground"
    android:orientation="vertical"
    tools:context=".view.ComicActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--   Search Bar -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilComicSearch"
            android:theme="@style/search_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIconTint="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/search_input"
                android:background="@color/yellowBackground"
                android:text="Search" />
        </com.google.android.material.textfield.TextInputLayout>

        <!--  Comic Title   -->
        <TextView
            android:id="@+id/tvComicTitle"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:gravity="center_vertical"
            android:text="The Avangers"
            android:textAlignment="viewStart"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            app:layout_constraintEnd_toStartOf="@id/ibComicSearch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tilComicSearch"
            tools:ignore="RtlCompat" />

        <!--Search Button            -->
        <ImageButton
            android:id="@+id/ibComicSearch"
            style="@style/search_button"
            android:contentDescription="TODO"
            app:layout_constraintTop_toBottomOf="@+id/tilComicSearch"
            app:layout_constraintBottom_toTopOf="@id/ivComicPicture"
            app:layout_constraintEnd_toStartOf="@id/ibComicFavoriteYes"
            android:background="@color/yellowBackground"/>

        <!--Favorite 'Yes' Button            -->
        <ImageButton
            android:id="@+id/ibComicFavoriteYes"
            style="@style/favorite_button_YES"
            android:contentDescription="TODO"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@+id/tilComicSearch"
            app:layout_constraintBottom_toTopOf="@id/ivComicPicture"
            app:layout_constraintStart_toEndOf="@id/ibComicSearch"
            android:background="@color/yellowBackground"/>

        <!--Favorite 'No' Button            -->
        <ImageButton
            android:id="@+id/ibComicFavoriteNO"
            style="@style/favorite_button_NO"
            android:contentDescription="TODO"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/tilComicSearch"
            app:layout_constraintBottom_toTopOf="@id/ivComicPicture"
            app:layout_constraintEnd_toStartOf="@id/ibComicShare"
            app:layout_constraintStart_toEndOf="@id/ibComicSearch"
            android:background="@color/yellowBackground"/>

        <!--Share Button            -->
        <ImageButton
            android:id="@+id/ibComicShare"
            style="@style/share_button"
            android:contentDescription="TODO"
            app:layout_constraintTop_toBottomOf="@+id/tilComicSearch"
            app:layout_constraintBottom_toTopOf="@id/ivComicPicture"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ibComicFavoriteNO"
            android:background="@color/yellowBackground"/>

        <!-- Comic's Picture        -->
        <ImageView
            android:id="@+id/ivComicPicture"
            android:layout_width="360dp"
            android:layout_height="300dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/comic3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvComicTitle" />

        <!--  Comic's Published Label   -->
        <TextView
            android:id="@+id/tvComicPublishedLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Published:"
            android:textAlignment="viewStart"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10sp"
            app:layout_constraintStart_toStartOf="@id/tvComicTitle"
            app:layout_constraintTop_toBottomOf="@id/ivComicPicture"
            tools:ignore="RtlCompat" />

        <!--  Comic's Published Date   -->
        <TextView
            android:id="@+id/tvComicPublishedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="July 01, 1991"
            android:textAlignment="viewStart"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toTopOf="@id/tvComicPublishedLabel"
            app:layout_constraintStart_toEndOf="@id/tvComicPublishedLabel"
            tools:ignore="RtlCompat"/>

        <!-- Comic's Writers label       -->
        <TextView
            android:id="@+id/tvComicWriterLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Writer:"
            android:textAlignment="viewStart"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/tvComicPublishedLabel"
            app:layout_constraintStart_toStartOf="@id/tvComicPublishedLabel"
            tools:ignore="RtlCompat" />

        <!-- Comic's Writers       -->
        <TextView
            android:id="@+id/tvComicWriter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Jim Starlin"
            android:textAlignment="viewStart"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/tvComicWriterLabel"
            app:layout_constraintStart_toStartOf="@id/tvComicWriterLabel"
            tools:ignore="RtlCompat" />

        <!-- Comic's Penciler label       -->
        <TextView
            android:id="@+id/tvComicpencilerLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Penciler:"
            android:textAlignment="viewStart"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="130dp"
            app:layout_constraintTop_toBottomOf="@id/tvComicPublishedLabel"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="RtlCompat" />

        <!-- Comic's Pencilers       -->
        <TextView
            android:id="@+id/tvComicPenciler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="George Perez"
            android:textAlignment="viewStart"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/tvComicpencilerLabel"
            app:layout_constraintStart_toStartOf="@id/tvComicpencilerLabel"
            tools:ignore="RtlCompat" />

        <!-- Comic Description Label       -->
        <TextView
            android:id="@+id/tvComicDescriptionLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Description:"
            android:textAlignment="viewStart"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/tvComicWriter"
            app:layout_constraintStart_toStartOf="@id/tvComicWriterLabel"
            tools:ignore="RtlCompat" />

        <!-- Comic Desciption        -->
        <TextView
            android:id="@+id/tvComicDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:autoSizeTextType="uniform"
            android:text="@string/character_text_Description"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            app:layout_constraintStart_toStartOf="@id/tvComicDescriptionLabel"
            app:layout_constraintTop_toBottomOf="@id/tvComicDescriptionLabel"
            tools:ignore="RtlCompat" />

        <!-- Label Character's list            -->
        <TextView
            android:id="@+id/tvComicCharactersList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:text="@string/label_text_characters"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvComicTitle"
            app:layout_constraintTop_toBottomOf="@id/tvComicDescription" />

        <!-- Character List            -->
        <com.synnapps.carouselview.CarouselView
            android:id="@+id/cvComicCharacters"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="25dp"
            app:disableAutoPlayOnUserInteraction="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvComicCharactersList"
            app:pageTransformer="depth" />

        <!--  Menu - Bottom Navigation       -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bnvCharacter"
            style="@style/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/cvComicCharacters"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>