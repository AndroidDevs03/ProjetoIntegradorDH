        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@drawable/ic_marvelx"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProjetoIntegradorDigitalHouse">
        <activity android:name=".view.NameSearchActivity"/>
        <activity android:name=".view.FavoritesActivity" />
        <activity android:name=".view.RegisterSplash" />
        <activity android:name=".view.RegisterActivity" />
        <activity android:name=".view.LoginActivity" />
        <activity android:name=".view.MovieActivity" />
        <activity android:name=".view.SeriesActivity" />
        <activity android:name=".view.ComicActivity" />
        <activity android:name=".view.CharacterActivity" />
        <activity
            android:name=".view.ChipSearchActivity"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.SplashActivity">

        </activity>
        <activity android:name=".view.HomeActivity" 
                  android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar"/>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>
</manifest>