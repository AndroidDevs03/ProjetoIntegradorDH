<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProjetoIntegradorDigitalHouse"
        parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnSecondary</item>
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus" tools:ignore="NewApi">true</item>
    </style>

    <style name="bottom_navigation">
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="menu">@menu/bottom_navigation_default</item>
        <item name="backgroundTint">@color/black</item>
        <item name="itemIconTint">@drawable/bottom_navigation_selector</item>
        <item name="itemIconSize">30dp</item>
        <item name="android:layout_height">100dp</item>
    </style>
    <style name="share_button">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="itemIconTint">@color/white</item>
        <item name="srcCompat">@drawable/share_icon</item>
    </style>
    <style name="favorite_button_NO">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="itemIconTint">@color/white</item>
        <item name="srcCompat">@drawable/star_outline_icon</item>
    </style>
    <style name="favorite_button_YES">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="itemIconTint">@color/white</item>
        <item name="srcCompat">@drawable/star_icon</item>
    </style>
    <style name="search_button">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="itemIconTint">@color/white</item>
        <item name="srcCompat">@drawable/search_icon</item>
    </style>
    <style name="search_field">
        <item name="android:layout_gravity">top</item>
        <item name="backgroundTint">#333333</item>
        <item name="itemIconTint">@color/white</item>
        <item name="android:layout_height">100dp</item>
        <item name="endIconTint">@color/white</item>
        <item name="endIconDrawable">@drawable/ic_baseline_search_24</item>
        <item name="endIconMode">custom</item>
        <item name="endIconTintMode">src_atop</item>
        <item name="hintEnabled">false</item>
        <item name="colorControlActivated">#FFFFFF</item>
    </style>
    <style name="search_input">
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:fontFamily">@font/marvel</item>
        <item name="android:inputType">text</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:textSize">30sp</item>
        <item name="android:hint">Search</item>
        <item name="android:textColorHint">@color/white</item>
    </style>
    <style name="arrow_navigation">
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">#00957373</item>
        <item name="android:tint">@color/white</item>
        <item name="android:visibility">gone</item>
    </style>
    <style name="theme_title">
        <item name="android:fontFamily">@font/marvel</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingStart" tools:ignore="NewApi">20dp</item>
    </style>

    <style name="button_default">
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="social_midia_button">
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="button_home">
        <item name="android:background">@drawable/button_home</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingEnd">30dp</item>
        <item name="android:paddingRight">30dp</item>
    </style>

    <style name="Theme.PopMe"
        parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="Theme">theme_pop</style>

</resources>